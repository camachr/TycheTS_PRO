{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "lib": ["ES2020"]
  },
  "include": ["src/**/*", "tests/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

